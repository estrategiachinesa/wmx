rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Allow anyone to read the shared credentials document for login verification.
    // Allow anyone to create the document if it doesn't exist, to enable initial setup.
    match /shared-access/credentials {
      allow read: if true;
      allow create: if !exists(/databases/$(database)/documents/shared-access/credentials);
      // For manual updates, you should restrict write access in the Firebase Console
      // to your admin user only, for example:
      // allow write: if request.auth.uid == "YOUR_ADMIN_UID";
    }
  }
}
