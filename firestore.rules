
/**
 * @fileoverview Firestore Security Rules for Chinese Trading Strategies.
 *
 * Core Philosophy:
 * This ruleset enforces access control for trading strategies, VIP requests, and app configuration.
 *
 * Data Structure:
 * - `/appConfig/links`: Stores global app configuration like affiliate URLs.
 * - `/appConfig/limitation`: Stores global app configuration like usage limits.
 * - `/chineseStrategies/{chineseStrategyId}`: Stores trading strategies.
 * - `/vipRequests/{userId}`: Stores VIP access requests.
 * - `/users/{userId}/signalHistory/{signalId}`: Stores user-specific signal history.
 *
 * Key Security Decisions:
 * - Public read access for app configuration and strategies.
 * - Writes to app configuration and strategies require authentication.
 * - Users can create or update their own VIP request document in `/vipRequests/{userId}`
 *   if they are authenticated and the document ID matches their `request.auth.uid`.
 * - Reading of VIP requests is restricted to the user who owns the document.
 * - Users can read and write to their own signal history subcollection.
 *
 * Denormalization for Authorization:
 * No denormalization is needed as authorization is based on authentication state and UID matching.
 *
 * Structural Segregation:
 * - `/appConfig`: For public configuration data.
 * - `/chineseStrategies`: For public strategy data.
 * - `/vipRequests`: For private, user-specific VIP requests.
 * - `/users/{userId}/signalHistory`: For private, user-specific historical data.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Grants public read access to app configuration.
     * @description Allows any user to create the document if it doesn't exist.
     * @description Restricts updates to authenticated users.
     * @path /appConfig/links
     */
    match /appConfig/links {
      allow read: if true;
      allow create: if true;
      allow update: if isSignedIn();
    }
    
    /**
     * @description Grants public read access to app configuration.
     * @description Allows any user to create the document if it doesn't exist.
     * @description Restricts updates to authenticated users.
     * @path /appConfig/limitation
     */
    match /appConfig/limitation {
      allow read: if true;
      allow create: if true;
      allow update: if isSignedIn();
    }

    /**
     * @description Grants public read access to Chinese strategies, but restricts writes to authenticated users.
     * @path /chineseStrategies/{chineseStrategyId}
     */
    match /chineseStrategies/{chineseStrategyId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    /**
     * @description Rules for VIP access requests.
     * @path /vipRequests/{userId}
     */
    match /vipRequests/{userId} {
      /**
       * @allow (get): A user can read their own VIP request document.
       * @allow (write): A user can create or update their own VIP request.
       *   - The user must be signed in.
       *   - The document ID must match the user's UID.
       *   - The brokerId must be a string with at least 8 digits.
       *   - The status can only be set to 'PENDING' by the user on create.
       *   - The status can be set to 'DEPOSIT_PENDING' on update only if the previous status was 'AWAITING_DEPOSIT'.
       */
      allow get: if isSignedIn() && isOwner(userId);
      allow write: if isSignedIn() && isOwner(userId) && isValidVipRequest(request, resource);
    }
    
    /**
     * @description Rules for a user's signal history.
     * @path /users/{userId}/signalHistory/{signalId}
     */
    match /users/{userId}/signalHistory/{signalId} {
        allow read, write: if isSignedIn() && isOwner(userId);
    }

    // Helper functions.
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isValidVipRequest(req, res) {
      let isBrokerIdValid = req.resource.data.brokerId is string &&
                           req.resource.data.brokerId.matches("^[0-9]{8,}$");
      
      let isCreating = req.method == 'create' && 
                       req.resource.data.status == 'PENDING' &&
                       isBrokerIdValid;
      
      // On update, the user can only change status to DEPOSIT_PENDING if previous state was AWAITING_DEPOSIT
      // Or they can submit a new brokerId if the request was REJECTED.
      let isUpdatingToDepositPending = req.method == 'update' && 
                                       req.resource.data.status == 'DEPOSIT_PENDING' &&
                                       res.data.status == 'AWAITING_DEPOSIT';
                                       
      let isResubmittingRejected = req.method == 'update' &&
                                   res.data.status == 'REJECTED' &&
                                   req.resource.data.status == 'PENDING' &&
                                   isBrokerIdValid;


      return isCreating || isUpdatingToDepositPending || isResubmittingRejected;
    }
  }
}

    